<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="../public/styles.css" rel="stylesheet">

    <!-- JQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Multiplayer Tools-->
    <script defer src="./public/scripts/sockets.js"></script>
    <script defer src="https://cyoa-online.herokuapp.com/socket.io/socket.io.js"></script>
    <!--<script defer src="http://localhost:4000/socket.io/socket.io.js"></script>-->

    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/d92537b213.js" crossorigin="anonymous"></script>
    <title>Text Adventure</title>
</head>

<body>
    <!-- top nav bar, to be moved out as template later -->
    <div class="topnav" id="myTopnav">
        <div class="topnavContents">
            <a class="logo" href="stories.html">Text Adventures</a>
        </div>
    </div>
    <!-- Top Nav END-->
    <div class="col-8 col-s-12">
        <div id="title">
            <h1>Terror-ble Morning</h1>
        </div>
        <% node.forEach(node=> { %>
            <div id="text">
                <%= node.text %>
            </div>
            <div id="option-buttons" class="btn-grid">
                <% node.options.forEach(option=> { %>
                    <button type="submit" label="<%= option.nextNode %>" class="btn" id="<%= option.nextNode %>">
                        <%= option.optText %>
                            <!--(<span id="vote-count">0</span>) -->
                    </button>
                    <% }) %>
            </div>
            <% }) %>

    </div>
    <div class="col-4 col-s-12">
        <div class="aside">
            <p>Chat</p>
            <div class="top_div" id="messages">
                <!-- Messages show here -->
            </div>
            <div class="bottom_div">
                <input type="text" aria-label="your message" id="msg" />
                <button id="send" button-name="send message"><i class="fa-solid fa-paper-plane"></i></i></button>
            </div>
        </div>
    </div>
</body>

</html>